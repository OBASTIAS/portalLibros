<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>reservations</th>
      <th>unreserved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.user.email %></td>
        <td><%= reservation.book.title %></td>
        <td><%= link_to 'Purchase', new_sale_path(reservation_id: reservation.id), remote: true %></td>
        <td><%= link_to 'Unserve', reservation_path(reservation.id ), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_reservation_path %>
