<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-hover">
  <thead>
    <tr class="text-center"> 
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Status</th>
      <th>User</th>
      <th>Reservation</th>
      <th>show</th>
      <th>edit</th>
      <th>delete</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td class="text-center"><%= book.description %></td>
        <td class="text-center"><%= book.price %></td>
        <td class="text-center"><%= book.status %></td>
        <td><%= book.user %></td>
         <% if current_user %>
              <td class="text-center"> <%= link_to 'Reserve this book', reserve_book_path(book), method: :post, remote: true %></td>
          <% end %>
        <td class="text-center"><%= link_to 'Show', book %></td>
        <td class="text-center"><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class="text-center"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

